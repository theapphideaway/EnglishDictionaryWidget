<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        tools:context=".MainActivity">



    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="55dp">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <TextView
                android:id="@+id/title_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Where is My Widget?"
                android:fontFamily="@font/san_francisco"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.269" android:layout_margin="8dp" android:paddingTop="16dp"
                android:textSize="32sp" android:textColor="@android:color/background_dark" android:textStyle="italic"
        />
    <TextView
            android:text="Step one: Press and hold an area on the home screen that is empty."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/def_1_text_view"
            android:layout_margin="16dp"
            android:textSize="24sp"
            android:textColor="@android:color/background_dark"
            android:fontFamily="@font/san_francisco"/>
    <TextView
            android:text="Step Two: Tap &quot;Widgets&quot; on the popup menu."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/def_2_text_view"
            android:layout_margin="16dp"
            android:textSize="24sp"
            android:textColor="@android:color/background_dark"
            android:fontFamily="@font/san_francisco"/>
    <TextView
            android:text="Step Three: Find &quot;English Dictionary Widget&quot;."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/def_3_text_view"
            android:layout_margin="16dp"
            android:fontFamily="@font/san_francisco"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp"/>
    <TextView
            android:text="Step Four: Drag the widget onto the home screen."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/def_4_text_view"
            android:layout_margin="16dp"
            android:textSize="24sp"
            android:textColor="@android:color/background_dark"
            android:fontFamily="@font/san_francisco"/>

    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <com.google.android.gms.ads.AdView
            android:id="@+id/ad_view"
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId=""
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

    </com.google.android.gms.ads.AdView>


</android.support.constraint.ConstraintLayout>